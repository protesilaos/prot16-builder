#XfceNotifyWindow {
    background-color: #<%- value["dbg"]["hex"] %>;
    border-radius: 2px;
    border: none;
    padding: 40px;
}

#XfceNotifyWindow label,
#XfceNotifyWindow image {
    font-size: 12px;
    font-weight: 400;
    color: #<%- value["dt1"]["hex"] %>;
}

#XfceNotifyWindow label#summary {
    font-size: 18px;
    font-weight: 700;
    color: #<%- value["p1"]["hex"] %>;
}

#XfceNotifyWindow button {
    border-style: none;
    background-image: none;
    background-color: #<%- value["p2"]["hex"] %>;
    color: #<%- value["lt1"]["hex"] %>;
    padding: 0.5em 1em;
}

#XfceNotifyWindow button:hover {
    border-style: none;
    background-image: none;
    background-color: #<%- value["t1"]["hex"] %>;
    color: #<%- value["lt1"]["hex"] %>;
}
